<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ua.samosfator.moduleok.fragment.NavigationDrawerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/account_info_linearLayout">

        <TextView
            android:id="@+id/student_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:text="Владилав Голубєв"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/student_group_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="start"
            android:paddingLeft="8dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="ПЗС-12"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/semester_spinner"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/account_info_linearLayout"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_list" />
</RelativeLayout>
