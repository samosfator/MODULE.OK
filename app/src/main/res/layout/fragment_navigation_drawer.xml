<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="ua.samosfator.moduleok.fragment.navigation_drawer_fragment.NavigationDrawerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:background="@drawable/account_info_background"
        android:id="@+id/account_info_linearLayout">

        <TextView
            android:id="@+id/student_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:text="Владилав Голубєв"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <TextView
            android:id="@+id/student_group_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="start"
            android:paddingLeft="8dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/abc_secondary_text_material_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="ПЗС-12"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#30ffffff"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/semester_spinner"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sections_list"
        android:layout_below="@+id/account_info_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
